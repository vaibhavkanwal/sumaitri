<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for post in site.posts %}
    <url>
        <loc>http:{{ site.url }}{{ site.baseurl }}{{ post.url | remove: '/index.html' }}/</loc>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>
    {% endfor %}

    {% for page in site.pages %}
    {% if page.layout != nil %}
    {% if page.layout != 'feed' %}
    <url>
        <loc>http:{{ site.url }}{{ site.baseurl }}{{ page.url | remove: '/index.html' }}/</loc>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>

    </url>
    {% endif %}
    {% endif %}
    {% endfor %}
</urlset>